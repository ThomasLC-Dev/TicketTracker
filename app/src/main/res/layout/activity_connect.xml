<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connect.ConnectActivity">
    
    <View
        android:id="@+id/v_activity_connect_view_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_activity_connect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TicketTracer"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/v_activity_connect_view_top"
        app:layout_constraintBottom_toBottomOf="@id/v_activity_connect_view_top"
        app:layout_constraintStart_toStartOf="@id/v_activity_connect_view_top"
        app:layout_constraintEnd_toEndOf="@id/v_activity_connect_view_top"/>

    <EditText
        android:id="@+id/et_activity_connect_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_email_24"
        android:drawablePadding="10dp"
        android:background="@drawable/border_input_connect"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/v_activity_connect_view_top"
        app:layout_constraintStart_toStartOf="@id/v_activity_connect_view_top"
        app:layout_constraintEnd_toEndOf="@id/v_activity_connect_view_top"/>

    <EditText
        android:id="@+id/et_activity_connect_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:background="@drawable/border_input_connect"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_activity_connect_email"
        app:layout_constraintStart_toStartOf="@id/v_activity_connect_view_top"
        app:layout_constraintEnd_toEndOf="@id/v_activity_connect_view_top"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/border_button_connect"
        android:padding="15dp"
        android:text="Sign In"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/et_activity_connect_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>